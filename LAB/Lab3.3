#include <stdio.h>

struct student {
    char name[ 20 ] ;
    int age ;
    char sex ;
    float gpa ;
} ;

struct student upgrade( struct student child ) ;

int main() {
    struct student aboy ;
    aboy.sex = 'M' ;
    aboy.gpa = 3.00 ;
    printf( "%.2f\n", aboy.gpa ) ;      //print 1

    aboy = upgrade( aboy ) ;
    printf( "%.2f\n", aboy.gpa ) ;      //print 3

    return 0 ;
}//end function

struct student upgrade( struct student child ) {
    if( child.sex == 'M' ) {
        child.gpa = ( child.gpa * 0.1 ) + child.gpa ;
    }else {
        child.gpa = ( child.gpa * 0.2 ) + child.gpa ;
    }//end if

    printf( "%.2f\n", child.gpa ) ;     //print 2

    return child ;
}//end function
