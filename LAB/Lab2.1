#include <string.h>

void reverse( char str1[], char str2[] ) ;

int main() {

    char text[50] ;
    char out[50] ;
    reverse( text, out ) ;
	printf( "Input = %s\n", text ) ;
	printf( "Output = %s ", out ) ;

    return 0 ;
}//end function

void reverse( char str1[], char str2[] ) {

    gets( str1 ) ;
    int lenght = strlen( str1 ) ;

	int i = 0 ;
	
	while( i < lenght ) {
		str2[i] = str1[ lenght - 1 - i ] ;
		i++ ;
	}//end while

	str2[ lenght ] = '\0' ;

}//end function
